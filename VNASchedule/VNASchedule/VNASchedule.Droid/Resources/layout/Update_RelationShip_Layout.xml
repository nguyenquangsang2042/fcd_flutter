<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:background="@color/clWhite"
        android:id="@+id/lnRelationship1PDetail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10">
        <RelativeLayout
            android:background="@color/headerBlue"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:id="@+id/relativeLayout1"
            android:layout_weight="0.8">
            <ImageView
                android:tint="@color/white"
                android:src="@drawable/icon_back30"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:id="@+id/img_InfoUser_Back_Rela"
                android:padding="10dp"
                android:layout_centerVertical="true" />
            <TextView
                android:text="RELATIONSHIP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView1"
                android:textColor="@color/white"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textSize="18sp"
                 />
            <TextView
                android:layout_centerHorizontal="true"
                android:text="Save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_InfoUser_Edit_Rela"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </RelativeLayout>
        <ScrollView
            android:layout_weight="9.2"
            android:layout_width="match_parent"
            android:layout_height="0.1dp">
            <LinearLayout
                android:id="@+id/lnviewREla"
                android:orientation="vertical"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/linearLayout3216"
                    android:gravity="center_vertical">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent">
                        <TextView
                            android:text="NAME (ENG)"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView4"
                            android:textStyle="bold"
                            android:textColor="@color/headerBlue"
                            android:fontFamily="sans-serif-light"
                            android:paddingBottom="3dp"
                            android:paddingTop="3dp"
                            android:textSize="14sp" />
                        <TextView
                            android:layout_width="10dp"
                            android:layout_height="10dp"
                            android:text="*"
                            android:textColor="@color/clRedMain"/>
                    </LinearLayout>
                    <EditText
                        android:fontFamily="sans-serif-light"
                        android:text="Text1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/edt_NameENG"
                        android:textColor="@android:color/background_dark"
                        android:textSize="14sp"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp"
                        android:background="@drawable/textnomal" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:id="@+id/view1"
                        android:background="@color/clGray"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp" />
                </LinearLayout>






                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent">
                        <TextView
                            android:text="NAME (VN)"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView4"
                            android:textStyle="bold"
                            android:textColor="@color/headerBlue"
                            android:fontFamily="sans-serif-light"
                            android:paddingBottom="3dp"
                            android:paddingTop="3dp"
                            android:textSize="14sp" />

                    </LinearLayout>
                    <EditText
                        android:fontFamily="sans-serif-light"
                        android:text="Text1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/edt_NameVN"
                        android:textColor="@android:color/background_dark"
                        android:textSize="14sp"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp"
                        android:background="@drawable/textnomal" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:id="@+id/view1"
                        android:background="@color/clGray"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent">
                        <TextView
                            android:text="RELATIONSHIP"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textColor="@color/headerBlue"
                            android:fontFamily="sans-serif-light"
                            android:paddingBottom="3dp"
                            android:paddingTop="3dp"
                            android:textSize="14sp" />

                    </LinearLayout>
                    <LinearLayout
                        android:weightSum="1"
                        android:id="@+id/ln_Type_Relationship"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginLeft="0dp"
                        android:layout_marginRight="0dp"
                        android:padding="2dp"
                        android:background="@drawable/textvienvuongden">
                        <TextView
                            android:layout_weight="0.95"
                            android:id="@+id/tv_Type_relationshio"
                            android:layout_width="1dp"
                            android:layout_height="wrap_content"
                            android:text="Choose"
                            android:textSize="14sp"
                            android:textColor="#000000"

                            />
                        <ImageView
                            android:id="@+id/imgDownCaret"
                            android:layout_weight="0.05"
                            android:layout_width="1dp"
                            android:layout_height="15dp"
                            android:src="@drawable/caretdown"
                            />
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/clGray"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent">
                        <TextView
                            android:text="DATE OF BIRTH"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textColor="@color/headerBlue"
                            android:fontFamily="sans-serif-light"
                            android:paddingBottom="3dp"
                            android:paddingTop="3dp"
                            android:textSize="14sp" />

                    </LinearLayout>
                    <TextView
                        android:fontFamily="sans-serif-light"
                        android:text=""
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/edt_DateOfBirthRelationShip"
                        android:textColor="@android:color/background_dark"
                        android:textSize="14sp"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp"
                        android:drawableRight="@drawable/calendar"
                        android:background="@drawable/textnomal" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/clGray"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent">
                        <TextView
                            android:text="ID CARD NUMBER"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textColor="@color/headerBlue"
                            android:fontFamily="sans-serif-light"
                            android:paddingBottom="3dp"
                            android:paddingTop="3dp"
                            android:textSize="14sp" />

                    </LinearLayout>
                    <EditText
                        android:fontFamily="sans-serif-light"
                        android:text="Text1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/edt_IdCardNumber_Relation"
                        android:textColor="@android:color/background_dark"
                        android:textSize="14sp"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp"
                        android:background="@drawable/textnomal" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/clGray"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent">
                        <TextView
                            android:text="ADDRESS"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textColor="@color/headerBlue"
                            android:fontFamily="sans-serif-light"
                            android:paddingBottom="3dp"
                            android:paddingTop="3dp"
                            android:textSize="14sp" />

                    </LinearLayout>
                    <EditText
                        android:fontFamily="sans-serif-light"
                        android:text="Text1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/edt_Address_Relation"
                        android:textColor="@android:color/background_dark"
                        android:textSize="14sp"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp"
                        android:background="@drawable/textnomal" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/clGray"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent">
                        <TextView
                            android:text="TELEPHONE NUMBER"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textColor="@color/headerBlue"
                            android:fontFamily="sans-serif-light"
                            android:paddingBottom="3dp"
                            android:paddingTop="3dp"
                            android:textSize="14sp" />

                    </LinearLayout>
                    <EditText
                        android:fontFamily="sans-serif-light"
                        android:text="Text1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/edt_TelephoneNumber_RelationShip"
                        android:textColor="@android:color/background_dark"
                        android:textSize="14sp"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp"
                        android:background="@drawable/textnomal" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/clGray"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent">
                        <TextView
                            android:text="MOBILE NUMBER"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textColor="@color/headerBlue"
                            android:fontFamily="sans-serif-light"
                            android:paddingBottom="3dp"
                            android:paddingTop="3dp"
                            android:textSize="14sp" />

                    </LinearLayout>
                    <EditText
                        android:fontFamily="sans-serif-light"
                        android:text="Text1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/edt_MobileNumber_Relationship"
                        android:textColor="@android:color/background_dark"
                        android:textSize="14sp"
                        android:paddingTop="3dp"
                        android:paddingBottom="3dp"
                        android:background="@drawable/textnomal" />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/clGray"
                        android:layout_marginTop="3dp"
                        android:layout_marginBottom="3dp" />
                </LinearLayout>
                <TextView
                    android:text="CERTIFICATE DOCUMENT (MARRIGE,BIRTH,...)"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/headerBlue"
                    android:fontFamily="sans-serif-light"
                    android:paddingBottom="3dp"
                    android:paddingTop="3dp"
                    android:textSize="14sp" />
                <LinearLayout
                    android:id="@+id/lnimgCer"
                    android:orientation="horizontal"
                    android:layout_marginBottom="15dp"
                    android:weightSum="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="1dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_centerHorizontal="true"
                            android:scaleType="fitXY"
                            android:id="@+id/imgFrontCerRela"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:src="@drawable/card_orpp"/>
                        <TextView
                            android:layout_below="@id/imgFrontCerRela"
                            android:layout_marginTop="10dp"
                            android:layout_centerHorizontal="true"
                            android:text="Front"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </RelativeLayout>
                    <RelativeLayout

                        android:orientation="vertical"
                        android:layout_width="1dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                                    >
                        <ImageView
                            android:layout_centerHorizontal="true"
                            android:scaleType="fitXY"
                            android:id="@+id/imgBackCerRela"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:src="@drawable/card_orpp"/>
                        <TextView
                            android:layout_below="@id/imgBackCerRela"
                            android:layout_marginTop="10dp"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:text="Back"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="20dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical">
                    <Button
                        android:id="@+id/BtnRemoveRelation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Remove"
                        android:background="@drawable/background_radius_gray"
                        android:textColor="@color/clRedMain"/>
                </LinearLayout>
            </LinearLayout>

        </ScrollView>
    </LinearLayout>
</LinearLayout>
