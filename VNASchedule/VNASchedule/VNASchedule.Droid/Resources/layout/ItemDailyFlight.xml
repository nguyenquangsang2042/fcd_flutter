
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:background="@color/white"
            android:orientation="horizontal"
            android:layout_height="80dp"
            android:layout_width="match_parent">
            <LinearLayout
                android:layout_marginLeft="5dp"
                android:orientation="vertical"
                android:layout_height="match_parent"
                android:layout_width="wrap_content">
                <RelativeLayout
                    android:paddingTop="14dp"
                    android:paddingRight="5dp"
                    android:paddingLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <refractored.controls.CircleImageView
                        android:layout_marginTop="5dp"
                        android:id="@+id/img_ava"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:backgroundTint="#00000000"
                        android:tint="#00000000"
                        app:civ_border_width="0dp"
                        app:civ_border_color="#ffffffff"
                        android:src="@drawable/icon_avatar64"/>
                    <LinearLayout
                        android:orientation="vertical"
                        android:minWidth="25px"
                        android:minHeight="25px"
                        android:layout_marginTop="5dp"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@drawable/circle"
                        android:alpha="0.15"
                        android:id="@+id/ln_dark"
                        android:visibility="gone"/>
                    <TextView
                        android:textSize="10sp"
                        android:layout_toRightOf="@id/img_ava"
                        android:fontFamily="@string/bold_font"
                        android:background="@drawable/circle_blue"
                        android:text="1"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:id="@+id/tv_pilot_count"
                        android:layout_weight="0"
                        android:textColor="@color/white"
                        android:lines="1"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:gravity="center" />
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginLeft="10dp"
                android:paddingTop="10dp"
                android:orientation="vertical"
                android:background="@color/white"
                android:layout_height="match_parent"
                android:layout_width="wrap_content">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:fontFamily="@string/light_font"
                        android:textSize="@dimen/content"
                        android:id="@+id/tv_apCodeFrom"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:text="SGN"
                        android:layout_width="35dp"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:padding="2dp"
                        android:layout_marginRight="8dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="8dp"
                        android:src="@drawable/icon_air_plane"
                        android:layout_width="20dp"
                        android:layout_height="20dp"/>
                    <TextView
                        android:fontFamily="@string/light_font"
                        android:textSize="@dimen/content"
                        android:id="@+id/tv_apCodeTo"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:text="HKG"
                        android:layout_width="35dp"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <TextView
                    android:fontFamily="@string/light_font"
                    android:textSize="@dimen/content"
                    android:textStyle="bold"
                    android:visibility="visible"
                    android:id="@+id/tv_air_plane_code"
                    android:layout_marginTop="10dp"
                    android:text="VN 365"
                    android:paddingRight="10dp"
                    android:textColor="@color/active_blue"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"/>
            </LinearLayout>
            <LinearLayout
                android:paddingTop="10dp"
                android:orientation="vertical"
                android:background="@color/white"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_width="match_parent">
                <LinearLayout
                    android:paddingRight="10dp"
                    android:gravity="right"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:fontFamily="@string/light_font"
                        android:textSize="@dimen/content"
                        android:id="@+id/tv_time_departrue"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:text="00:00"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:visibility="gone"
                        android:fontFamily="@string/light_font"
                        android:id="@+id/tv_time_arrival"
                        android:textSize="@dimen/content"
                        android:textStyle="bold"
                        android:textColor="#888888"
                        android:text="00:50 UTC"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                <TextView
                    android:fontFamily="@string/light_font"
                    android:layout_marginRight="10dp"
                    android:layout_gravity="right"
                    android:visibility="visible"
                    android:id="@+id/tv_flight_no"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="VNB291"
                    android:textSize="@dimen/content"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
    <TextView
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:background="@color/headerBlue"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
</LinearLayout>