<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@android:color/background_light"
    android:layout_height="match_parent">
    <LinearLayout
        android:foreground="?attr/selectableItemBackground"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lnContainer_ItemCompart"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="15dp"
        android:paddingTop="15dp">
        <RelativeLayout
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <refractored.controls.CircleImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/img_avatar"
                android:backgroundTint="#00000000"
                android:tint="#00000000"
                app:civ_border_width="0dp"
                app:civ_border_color="#ffffffff"
                android:layout_gravity="center_vertical"
                android:src="@drawable/icon_avatar64"
                android:layout_centerInParent="true" />
            <ImageView
                android:src="@drawable/icon_close28"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/img_Close"
                android:tint="@color/clBlue"
                android:layout_gravity="right"
                android:foregroundGravity="right"
                android:layout_alignParentRight="true"
                android:layout_marginTop="5dp" />
        </RelativeLayout>
        <TextView
            android:text="Name :"
            android:textSize="@dimen/content"
            android:fontFamily="@string/light_font"
            android:textColor="@android:color/background_dark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView1"
            android:padding="5dp" />
        <TextView
            android:text="Name :"
            android:textSize="@dimen/title"
            android:fontFamily="@string/light_font"
            android:textColor="@color/clOrange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_name"
            android:padding="5dp" />
        <View
            android:background="@color/clGray"
            android:layout_width="match_parent"
            android:layout_height="0.1px"
            android:id="@+id/view1" />
        <RelativeLayout
            android:minWidth="25px"
            android:minHeight="25px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relativeLayout1"
            android:padding="5dp">
            <TextView
                android:textSize="@dimen/content"
                android:fontFamily="@string/light_font"
                android:textColor="@android:color/background_dark"
                android:text="Crew code : "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView2" />
            <TextView
                android:text="Text"
                android:textSize="@dimen/content"
                android:fontFamily="@string/light_font"
                android:textColor="@android:color/background_dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/textView2"
                android:id="@+id/tv_Code" />
            <TextView
                android:text="Text"
                android:textSize="@dimen/content"
                android:fontFamily="@string/light_font"
                android:textColor="@android:color/background_dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_Position"
                android:layout_alignParentRight="true" />
        </RelativeLayout>

    </LinearLayout>
</LinearLayout>
