<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:id="@+id/ln_reply_parent"
            android:clickable="true">
            <RelativeLayout
                android:background="@color/headerBlue"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/relativeLayout1"
        >
                <ImageView
                    android:tint="@color/white"
                    android:src="@drawable/icon_back30"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/img_ReplyHelpDesk_Back"
                    android:padding="10dp"
                    android:layout_centerVertical="true" />
                <TextView
                    android:layout_centerInParent="true"
                    android:text="HelpDesk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_WebNews_Title"
                    android:textColor="@color/white"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:textSize="18sp"
                    android:layout_marginLeft="70dp"
                    android:layout_marginRight="70dp"
                    android:gravity="center"
                    android:ellipsize="end"
                    android:lines="1"
                    android:maxLines="1" />
            </RelativeLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:paddingBottom="10dp	"
                    android:paddingTop="10dp"
                    android:paddingLeft="2dp"
                    android:id="@+id/linear_user"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent">
                    <LinearLayout
                        android:orientation ="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <refractored.controls.CircleImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:id="@+id/img_user_ava"
                            android:backgroundTint="#00000000"
                            android:tint="#00000000"
                            android:padding="3dp"
                            app:civ_border_width="1dp"
                            app:civ_border_color="#ffffffff"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/icon_avatar64"/>
                        <TextView
                            android:id="@+id/tv_user_name"
                            android:textStyle="bold"
                            android:text="Admin"
                            android:textColor="@color/black"
                            android:layout_marginLeft="5dp"
                            android:gravity="center_vertical"
                            android:layout_height="match_parent"
                            android:layout_width="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent">
                        <TextView
                            android:layout_marginTop="2dp"
                            android:id="@+id/tv_user_comment"
                            android:paddingLeft="35dp"
                            android:paddingRight="10dp"
                            android:text="Ngày hôm nay tôi đssssssssssssi bộ 2500 km chỉ để ăn bánh mì làm từ nước Tây Ban Nha"
                            android:textColor="@color/black"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:layout_marginTop="2dp"
                            android:id="@+id/tv_time_user_ask"
                            android:paddingLeft="35dp"
                            android:paddingRight="10dp"
                            android:paddingTop="10dp"
                            android:textStyle="italic"
                            android:text="15/9/2020 15:50:50"
                            android:textColor="@color/black"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:paddingBottom="10dp	"
                    android:paddingTop="10dp"
                    android:paddingLeft="2dp"
                    android:background="@color/clGray"
                    android:id="@+id/linear_user"
                    android:layout_marginTop="5dp"
                    android:orientation="vertical"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent">
                    <LinearLayout
                        android:orientation ="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:tint="@color/darker_gray"
                            android:padding="2dp"
                            android:src="@drawable/icon_user2"
                            android:layout_width="30dp"
                            android:layout_height="30dp"/>
                        <TextView
                            android:textStyle="bold"
                            android:text="Admin"
                            android:textColor="@color/clVNAText"
                            android:layout_marginLeft="5dp"
                            android:gravity="center_vertical"
                            android:layout_height="match_parent"
                            android:layout_width="wrap_content" />
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_height="wrap_content"
                        android:layout_width="match_parent">
                        <TextView
                            android:layout_marginTop="2dp"
                            android:id="@+id/tv_reply"
                            android:paddingLeft="35dp"
                            android:paddingRight="10dp"
                            android:text="Ngày hôm nay tôi đi bộ 2500 km chỉ để ăn bánh mì làm từ nước Tây Ban Nha"
                            android:textColor="@color/black"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:layout_marginTop="2dp"
                            android:id="@+id/tv_time_reply"
                            android:paddingLeft="35dp"
                            android:paddingRight="10dp"
                            android:text="15/09/2020 15:55:55"
                            android:textStyle="italic"
                            android:paddingTop="10dp"
                            android:textColor="@color/black"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>