
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
	android:id="@+id/ln_parent"
    android:background="@android:color/background_light">
    <LinearLayout
		android:foreground="?android:attr/selectableItemBackground"
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout1">     
        <LinearLayout
			android:padding="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout2">
           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content">
                 <ImageView
                android:id="@+id/img_expand"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:padding="4dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/icon_exam_colapse"/>
                </LinearLayout>
           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content">
                
                 <TextView
				android:fontFamily="@string/light_font"
				android:textSize="@dimen/title"
				android:textColor="@color/headerBlue"
                android:text="Text"
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/tv_itemServey_Title"
                android:layout_weight="1"
             />	

			<ImageView
			android:id="@+id/img_survey_type"	
			android:padding="2dp"	
			android:src="@drawable/icon_exam_complete"	
			android:layout_width="20dp"
                android:layout_gravity="center_vertical"
            android:layout_height="20dp"/>

            <LinearLayout
                android:id="@+id/ln_point"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="gone"
                android:layout_gravity="center_vertical"
                >
                <ImageView
			android:id="@+id/img_point_1"	
			android:padding="2dp"	
			android:src="@drawable/icon_exam_has_point"	
			android:layout_width="20dp"
                android:layout_gravity="center_vertical"
            android:layout_height="20dp"/>
                  <ImageView
			android:id="@+id/img_point_2"	
			android:padding="2dp"	
			android:src="@drawable/icon_exam_has_point"	
			android:layout_width="20dp"
                android:layout_gravity="center_vertical"
            android:layout_height="20dp"/>
                <ImageView
			android:id="@+id/img_point_3"	
			android:padding="2dp"	
			android:src="@drawable/icon_exam_has_point"	
			android:layout_width="20dp"
                android:layout_gravity="center_vertical"
            android:layout_height="20dp"/>
                <ImageView
			android:id="@+id/img_point_4"	
			android:padding="2dp"	
			android:src="@drawable/icon_exam_has_point"	
			android:layout_width="20dp"
                android:layout_gravity="center_vertical"
            android:layout_height="20dp"/>
                <ImageView
			android:id="@+id/img_point_5"	
			android:padding="2dp"	
			android:src="@drawable/icon_exam_has_point"	
			android:layout_width="20dp"
                android:layout_gravity="center_vertical"
            android:layout_height="20dp"/>
            </LinearLayout>
        </LinearLayout>
                </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
			android:padding="5dp"
            >
            <TextView
				android:textSize="14sp"			
				android:maxLines="2"
				android:singleLine="false"
				android:lines="2"
                android:text=""
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/tv_itemSurvey_Description"
                android:layout_weight="1"
                android:textColor="@android:color/background_dark"
                android:fontFamily="@string/light_font" />
			 <TextView
				android:textSize="14sp"
				android:layout_marginLeft="5dp"
                android:text="Date - time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_itemServey_Date"            
                android:textColor="@android:color/background_dark"
                android:fontFamily="@string/light_font" />
        </LinearLayout>
       
    </LinearLayout>
	
	 <View
			android:paddingLeft="5dp"
			android:paddingRight="5dp"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:id="@+id/view1"
            android:background="@color/clGray" />
</LinearLayout>