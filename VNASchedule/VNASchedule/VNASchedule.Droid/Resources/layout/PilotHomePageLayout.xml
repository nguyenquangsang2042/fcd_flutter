<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:id="@+id/lnPilotMain"
    android:weightSum="9">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:alpha="0.2"
            android:scaleType="fitXY"
            android:src="@drawable/ic_bg_gridview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <android.support.v4.widget.SwipeRefreshLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/swipe_PilotMain">
            <VNASchedule.Droid.Code.Class.CustomNestedScrollView
                android:id="@+id/sv_main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:orientation="vertical">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:id="@+id/ln_top_sv"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="300dp"/>

                    <GridView
                        android:verticalSpacing="0dp"
                        android:horizontalSpacing="0dp"
                        android:stretchMode="columnWidth"
                        android:numColumns="2"
                        android:padding="8dp"
                        android:id="@+id/gridViewMenu"
                        android:layout_width="match_parent"
                        android:layout_height="0px"/>
                </LinearLayout>
            </VNASchedule.Droid.Code.Class.CustomNestedScrollView>
        </android.support.v4.widget.SwipeRefreshLayout>

        <LinearLayout
            android:id="@+id/ln_home_page_top"
            android:background="@color/clBlueMain"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/lnHomeViewTitle"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <ImageView
                    android:layout_marginLeft="15dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_title_vnairlines"
                    android:layout_width="210dp"
                    android:layout_height="30dp"/>

                <RelativeLayout
                    android:layout_gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <refractored.controls.CircleImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:id="@+id/img_QRCode_GetInfo"
                        android:backgroundTint="#00000000"
                        android:tint="#00000000"
                        android:padding="3dp"
                        app:civ_border_width="1dp"
                        app:civ_border_color="#f9f9f9"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="15dp"
                        android:src="@drawable/icon_qrcode"/>
                </RelativeLayout>
                
            </LinearLayout>

            <RelativeLayout
                android:background="@drawable/bg_top_banner_rounded"
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="1">

                <refractored.controls.CircleImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/img_PilotMain_Avata"
                    android:backgroundTint="#000000"
                    android:tint="#000000"
                    android:padding="3dp"
                    app:civ_border_width="1dp"
                    app:civ_border_color="#f9f9f9"
                    android:layout_marginLeft="15dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/icon_avatar64"/>

                <ImageView
                    android:id="@+id/img_banner_mini"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:layout_width="60dp"
                    android:layout_height="30dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/main_background"
                    />

                <LinearLayout
                    android:layout_marginLeft="60dp"
                    android:layout_marginRight="160dp"
                    android:layout_centerVertical="true"
                    android:layout_marginBottom="5dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:fontFamily="@string/normal_font"
                        android:textSize="16sp"
                        android:text=""
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_pilot_display_name"
                        android:textColor="#000000"
                        android:ellipsize="end"
                        android:lines="1"
                        android:maxLines="1" />

                    <TextView
                        android:fontFamily="@string/normal_font"
                        android:textSize="13sp"
                        android:text=""
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_pilot_position_name"
                        android:textColor="#5e5e5e"
                        android:ellipsize="end"
                        android:lines="1"
                        android:maxLines="1"/>

                </LinearLayout>
            </RelativeLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_marginTop="100dp"
            android:layout_alignParentEnd="true"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:id="@+id/rl_banner">
            <ImageView
                android:scaleType="fitXY"
                android:visibility="visible"
                android:id="@+id/img_back_drop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/main_background">
            </ImageView>

            <android.support.v4.view.ViewPager
                android:id="@+id/ViewPagerBanner"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <ImageView
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/gradient_shape">
            </ImageView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="5dp">

                <android.support.design.widget.TabLayout
                    android:id="@+id/tabLayoutBanner"
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="15dp"
                    app:tabBackground="@drawable/tab_selector_banner"
                    app:tabGravity="center"
                    app:tabIndicatorHeight="0dp" />

            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linear_PilotMain_Go"
                android:layout_alignParentBottom="true"
                android:visibility="visible">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="25dp">
                    <ImageView
                        android:visibility="invisible"
                        android:src="@drawable/icon_plane30gray"
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:id="@+id/img_PilotMain_plane"
                        android:tint="#ffffffff"
                        android:layout_marginLeft="5dp" />
                    <LinearLayout
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_width="0.1dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginLeft="20dp">
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_weight="1"
                                android:text=""
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:id="@+id/tv_PilotMain_Address"
                                android:textColor="@color/white"
                                android:maxLines="1"
                                android:ellipsize="end" />
                            <ImageView
                                android:visibility="gone"
                                android:layout_marginRight="10dp"
                                android:layout_gravity="center_vertical"
                                android:clickable="false"
                                android:layout_alignParentRight="true"
                                android:src="@drawable/icon_signout"
                                android:layout_width="wrap_content"
                                android:id="@+id/img_PilotMain_Close"
                                android:tint="@color/white"
                                android:layout_height="match_parent"/>
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_weight="1"
                                android:text=""
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:id="@+id/tv_PilotMain_Date"
                                android:layout_marginTop="5dp"
                                android:textColor="@color/white"
                                android:ellipsize="end"
                                android:maxLines="1" />
                            <TextView
                                android:layout_marginRight="10dp"
                                android:layout_marginTop="5dp"
                                android:textSize="@dimen/content"
                                android:id="@+id/tv_app_version"
                                android:textColor="@color/white"
                                android:text=""
                                android:fontFamily="@string/normal_font"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>
