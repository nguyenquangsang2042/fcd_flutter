<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
	android:background="@color/white"
	android:id="@+id/frame_background">	
    <LinearLayout
		android:id="@+id/News"
		android:foreground= "?android:attr/selectableItemBackground"
		android:paddingTop="10dp"
		android:paddingLeft="10dp"
		android:paddingBottom="10dp"		
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
		<RelativeLayout
		android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout				
                android:orientation="vertical"
                android:minWidth="25px"
                android:minHeight="25px"         
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
					<ImageView	
					android:scaleType="fitXY"
					android:src="@drawable/avatar_news"
					android:layout_width="60dp"
					android:layout_height="60dp"				
					android:id="@+id/img_ItemNewsNew"
					/>
            </RelativeLayout>
            <LinearLayout
				
				android:layout_marginLeft="@dimen/componet_pading"
                android:orientation="vertical"
                android:minWidth="25px"
                android:minHeight="25px"
                android:layout_weight="8"
                android:layout_width="0.1dp"
                android:layout_height="wrap_content"
                android:id="@+id/linear"           
                android:visibility="visible">
				<LinearLayout
					android:minWidth="25px"
					android:minHeight="25px"
					android:orientation="horizontal"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:id="@+id/linearLayout22"
					android:layout_weight="10">
					<TextView
						android:textSize="@dimen/title"
						android:text="Text1"
						android:layout_width="0dp"
						android:layout_height="match_parent"
						android:id="@+id/tv_ItemNewsNew_Title"
						android:layout_weight="7"
						android:textColor="@color/headerBlue"
						android:fontFamily="sans-serif-light"
						android:lines="1"
						android:maxLines="1"
						android:ellipsize="end" />              
				</LinearLayout>
				<LinearLayout				
					android:orientation="horizontal"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:id="@+id/linearLayout33"             
					android:layout_marginBottom="@dimen/componet_pading"
					android:layout_marginTop="@dimen/componet_pading">
					<TextView
						android:textSize="@dimen/content"
						android:text="Texttttttttttttt"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:id="@+id/tv_ItemNewsNew_Detail"                    
						android:textColor="@android:color/background_dark"
						android:fontFamily="sans-serif-light"
						android:lines= "1"
						android:singleLine="true"
						android:maxLines="1"
						android:ellipsize="end"
						/>              
				</LinearLayout>	
				<LinearLayout
					android:orientation = "horizontal"
					android:layout_width="match_parent"
					android:layout_height="match_parent">
					<TextView
					android:textSize="@dimen/content"	
					android:text="Text"
					android:layout_width="0dp"
					android:layout_height="match_parent"
					android:id="@+id/tv_ItemNewsNew_Date"
					android:layout_weight="1"
					android:textColor="@android:color/background_dark"
					android:fontFamily="sans-serif-light"
					android:gravity="left" />
					 <LinearLayout				
					android:orientation="horizontal"
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:id="@+id/linearLayout4"
							android:layout_marginRight="10dp">
					<ImageView
						android:layout_marginLeft="5dp"	
						android:src="@drawable/icon_reply"
						android:layout_width="16dp"
						android:layout_height="15dp"
						android:id="@+id/img_ItemNews_Reply"
						/>
					<ImageView	
						android:layout_marginLeft="5dp"	
						android:src="@drawable/icon_answer"
						android:layout_width="16dp"
						android:layout_height="15dp"
						android:id="@+id/img_ItemNews_Answer"
						/>
					<ImageView
						android:layout_marginLeft="5dp"	
						android:src="@drawable/icon_confirm"
						android:layout_width="16dp"
						android:layout_height="15dp"
						android:id="@+id/img_ItemNews_Confirm"
						/>
					<ImageView
						android:layout_marginLeft="5dp"	
						android:src="@drawable/icon_flaghigh"
						android:layout_width="16dp"
						android:layout_height="15dp"
						android:id="@+id/img_ItemNews_Flag"
						/>
					</LinearLayout>
					</LinearLayout>
				
					<!--<View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:id="@+id/view1"
                android:background="@color/clGray" />-->
            </LinearLayout>
        </LinearLayout>
		<LinearLayout			
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linear_ItemNewsNew_Revoked"
            android:gravity="left"
            android:visibility="visible">
            <TextView
				android:layout_marginBottom="10dp"
				android:layout_marginLeft="2dp"
				android:layout_marginTop="15dp"
                android:text="Revoked!"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_ItemNews_Date"
                android:textColor="@color/clRedMain"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:rotation="-15"
                android:background="@drawable/textbotronred"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp" />
        </LinearLayout>
		</RelativeLayout>
    </LinearLayout>
	<LinearLayout
		android:id="@+id/Notify"
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		 android:minWidth="25px"
		android:minHeight="25px"
		android:background="@android:color/background_light">
		<RelativeLayout		
			android:foreground= "?android:attr/selectableItemBackground"
			android:id="@+id/relative_news"
			android:paddingTop="10dp"
			android:paddingLeft="5dp"
			android:paddingBottom="10dp"
			android:paddingRight="10dp"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">		
			<ImageView
			android:layout_marginLeft="5dp"
			android:layout_marginRight = "@dimen/componet_pading"			
			android:id="@+id/ic_ava_notification"	
			android:src="@drawable/logo_vna120"
			android:layout_width="60dp"
			android:layout_height="60dp"/>
			<LinearLayout			
				android:layout_toRightOf="@id/ic_ava_notification"
				android:orientation="vertical"          
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:id="@+id/linear2"          
				android:visibility="visible">
				<LinearLayout
					android:minWidth="25px"
					android:minHeight="25px"
					android:orientation="horizontal"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:id="@+id/linearLayout22"
					android:layout_weight="10">
					<TextView
						android:textSize="@dimen/title"
						android:text="Text1"
						android:layout_width="0dp"
						android:layout_height="match_parent"
						android:id="@+id/tv_ItemNews_Title"
						android:layout_weight="7"
						android:textColor="@color/headerBlue"
						android:fontFamily="sans-serif-light"
						android:lines="1"
						android:maxLines="1"
						android:ellipsize="end" />              
				</LinearLayout>
				<LinearLayout				
					android:orientation="horizontal"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:id="@+id/linearLayout33"             
					android:layout_marginBottom="@dimen/componet_pading"
					android:layout_marginTop="@dimen/componet_pading">
					<TextView
						android:textSize="@dimen/content"
						android:text="Texttttttttttttttttttttttttttttttttttttttttttttttttttttttttttttttt"
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:id="@+id/tv_ItemNews_Detail"                    
						android:textColor="@android:color/background_dark"
						android:fontFamily="sans-serif-light"
						android:lines= "1"
						android:singleLine="true"
						android:maxLines="1"
						android:ellipsize="end"
						/>              
				</LinearLayout>	
				<LinearLayout
					android:orientation = "horizontal"
					android:layout_width="match_parent"
					android:layout_height="match_parent">
					<TextView
					android:textSize="@dimen/content"	
					android:text="Text"
					android:layout_width="0dp"
					android:layout_height="match_parent"
					android:id="@+id/tv_ItemNews_Date2"
					android:layout_weight="1"
					android:textColor="@android:color/background_dark"
					android:fontFamily="sans-serif-light"
					android:gravity="left" />
				
				</LinearLayout>
			</LinearLayout>
			<LinearLayout			
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:id="@+id/linear_ItemNews_Revoked"
				android:gravity="center_vertical"
				android:visibility="visible">
				<TextView
					android:layout_marginBottom="10dp"
					android:layout_marginLeft="2dp"
					android:layout_marginTop="15dp"
					android:text="Revoked!"
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:id="@+id/tv_ItemNews_Date2"
					android:textColor="@color/clRedMain"
					android:fontFamily="sans-serif-light"
					android:layout_gravity="center"
					android:rotation="-15"
					android:background="@drawable/textbotronred"
					android:paddingBottom="5dp"
					android:paddingTop="5dp"
					android:paddingLeft="5dp"
					android:paddingRight="5dp" />
			</LinearLayout>
		</RelativeLayout>
	</LinearLayout>
</LinearLayout>