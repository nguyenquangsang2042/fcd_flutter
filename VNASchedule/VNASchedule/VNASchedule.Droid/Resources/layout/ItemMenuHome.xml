<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:id="@+id/ln_Item"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        app:cardBackgroundColor="#007697"
        app:cardElevation="4dp"
        app:cardCornerRadius="8dp"
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <FrameLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/linearLayout6"
                android:weightSum="3">
                <LinearLayout
                    android:orientation="vertical"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:id="@+id/linearLayout7"
                    android:layout_weight="2">
                    <ImageView
                        android:src="@drawable/icon_user2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/imgItemMenu"
                        android:padding="12dp"
                        android:tint="@color/clVNAText" />
                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:minWidth="25px"
                    android:minHeight="25px"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:id="@+id/linearLayout8"
                    android:layout_weight="1">
                    <TextView
                        android:text="Contacts"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/tv_itemmenu"
                        android:textColor="@color/clVNAText2"
                        android:fontFamily="@string/light_font"
                        android:gravity="center_horizontal"
                        android:tag="MAIN_MENU_CONTACT"
                        android:textStyle="bold"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible"
                android:id="@+id/linear_PilotMain_Pro"
                android:gravity="center"
                android:minWidth="25px"
                android:minHeight="25px">
                <ProgressBar
                    android:visibility="gone"
                    style="?android:attr/progressBarStyleSmall"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:max="100"
                    android:progress="0"
                    android:indeterminate="true"
                    android:id="@+id/progressBar1" />
            </LinearLayout>
        </FrameLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
