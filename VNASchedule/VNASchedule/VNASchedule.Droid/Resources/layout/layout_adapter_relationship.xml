<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    
    android:background="@color/clWhite"
    
    >
   <FrameLayout
        android:weightSum="10"
        android:orientation="horizontal"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
        >
     <LinearLayout
         android:layout_marginRight="20dp"
        android:layout_weight="1"
        android:id="@+id/lnrelationshipadapter"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/nameofrelation"
            android:text="Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/headerBlue"
            android:fontFamily="sans-serif-light"
            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            android:textSize="14sp"
             android:background="@drawable/textnomal"/>
        <TextView
            android:id="@+id/typeofrelation"
            android:fontFamily="sans-serif-light"
            android:hint="Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/background_dark"
            android:textSize="14sp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:background="@drawable/textnomal" />
            <View
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/clGray" />
    </LinearLayout>
    <ImageView
            android:id="@+id/imgGo"
            android:layout_gravity="end"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/rightarrowsss"/>
    </FrameLayout>
    



</LinearLayout>
