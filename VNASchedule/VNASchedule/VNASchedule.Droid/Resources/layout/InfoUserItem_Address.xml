<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ln_content_address"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/background_light">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <TextView
            android:layout_marginBottom="5dp"
            android:text="ADDRESS"
            android:fontFamily="sans-serif-light"
            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#295989"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

            <TextView
                android:text="NATION"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView6"
                android:textStyle="bold"
                android:textColor="@color/headerBlue"
                android:fontFamily="sans-serif-light"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"
                android:textSize="14sp" />
            <TextView
                android:text="*"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_InfoUser_Address_NATION"
                android:fontFamily="sans-serif-light"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"
                android:paddingLeft="5dp"
                android:textSize="14sp"
                android:visibility="gone"
                android:textColor="@color/red"/>
            <ImageView
                android:src="@drawable/icon_editpencil"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:visibility="gone"
                android:id="@+id/img_InfoUser_Address_NATION" />

        </LinearLayout>
        <LinearLayout
            android:weightSum="1"
            android:id="@+id/ln_Nation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:padding="1dp"
            android:background="@drawable/borderbottom">
            <TextView
                android:textStyle="italic"
                android:padding="5dp"
                android:layout_weight="0.95"
                android:id="@+id/tv_Nation"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:text="Choose your nation"
                android:textSize="14sp"
                android:textColor="#000000"/>
            <ImageView
                android:id="@+id/imgDownCaret_Nation"
                android:layout_weight="0.05"
                android:layout_width="1dp"
                android:layout_height="15dp"
                android:src="@drawable/caretdown"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

            <TextView
                android:text="PROVINCE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/headerBlue"
                android:fontFamily="sans-serif-light"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"
                android:textSize="14sp" />
            <TextView
                android:text="*"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_InfoUser_Address_Province"
                android:fontFamily="sans-serif-light"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"
                android:paddingLeft="5dp"
                android:textSize="14sp"
                android:visibility="gone"
                android:textColor="@color/red"/>
            <ImageView
                android:src="@drawable/icon_editpencil"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:visibility="gone"
                android:id="@+id/img_InfoUser_Address_Province" />

        </LinearLayout>
        <LinearLayout
            android:weightSum="1"
            android:id="@+id/ln_Province"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:padding="1dp"
            android:background="@drawable/borderbottom">
            <TextView
                android:textStyle="italic"
                android:padding="3dp"
                android:layout_weight="0.95"
                android:id="@+id/tv_Provice"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:text="Choose your province"
                android:textSize="14sp"
                android:textColor="#000000"/>
            <ImageView
                android:id="@+id/imgDownCaret_Province"
                android:layout_weight="0.05"
                android:layout_width="1dp"
                android:layout_height="15dp"
                android:src="@drawable/caretdown"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

            <TextView
                android:text="DISTRICT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView6"
                android:textStyle="bold"
                android:textColor="@color/headerBlue"
                android:fontFamily="sans-serif-light"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"
                android:textSize="14sp" />
            <TextView
                android:text="*"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_InfoUser_Address_DISTRICT"
                android:fontFamily="sans-serif-light"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"
                android:paddingLeft="5dp"
                android:textSize="14sp"
                android:visibility="gone"
                android:textColor="@color/red"/>
            <ImageView
                android:src="@drawable/icon_editpencil"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:visibility="gone"
                android:id="@+id/img_InfoUser_Address_DISTRICT" />

        </LinearLayout>
        <LinearLayout
            android:weightSum="1"
            android:id="@+id/ln_DISTRICT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:padding="1dp"
            android:background="@drawable/borderbottom">
            <TextView
                android:textStyle="italic"
                android:padding="5dp"
                android:layout_weight="0.95"
                android:id="@+id/tv_DISTRICT"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:text="Choose your district"
                android:textSize="14sp"
                android:textColor="#000000"/>
            <ImageView
                android:id="@+id/imgDownCaret_District"
                android:layout_weight="0.05"
                android:layout_width="1dp"
                android:layout_height="15dp"
                android:src="@drawable/caretdown"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

            <TextView
                android:text="WARD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/headerBlue"
                android:fontFamily="sans-serif-light"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"
                android:textSize="14sp" />
            <TextView
                android:text="*"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_InfoUser_Address_WARD"
                android:fontFamily="sans-serif-light"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"
                android:paddingLeft="5dp"
                android:textSize="14sp"
                android:visibility="gone"
                android:textColor="@color/red"/>
            <ImageView
                android:src="@drawable/icon_editpencil"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:visibility="gone"
                android:id="@+id/img_InfoUser_Address_WARD" />

        </LinearLayout>
        <LinearLayout
            android:weightSum="1"
            android:id="@+id/ln_WARD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:padding="1dp"
            android:background="@drawable/borderbottom">
            <TextView
                android:textStyle="italic"
                android:padding="3dp"
                android:layout_weight="0.95"
                android:id="@+id/tv_WARD"
                android:layout_width="1dp"
                android:layout_height="wrap_content"
                android:text="Choose your ward"
                android:textSize="14sp"
                android:textColor="#000000"/>
            <ImageView
                android:id="@+id/imgDownCaret_Ward"
                android:layout_weight="0.05"
                android:layout_width="1dp"
                android:layout_height="15dp"
                android:src="@drawable/caretdown"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

            <TextView
                android:text="STREET"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/headerBlue"
                android:fontFamily="sans-serif-light"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"
                android:textSize="14sp" />
            <TextView
                android:text="*"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_InfoUser_Address"
                android:fontFamily="sans-serif-light"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"
                android:paddingLeft="5dp"
                android:textSize="14sp"
                android:visibility="gone"
                android:textColor="@color/red"/>
            <ImageView
                android:src="@drawable/icon_editpencil"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:visibility="gone"
                android:id="@+id/img_InfoUser_Address" />
        </LinearLayout>
        <EditText
            android:fontFamily="sans-serif-light"
            android:text="Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edt_InfoUser_Address"
            android:textColor="@android:color/background_dark"
            android:textSize="14sp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:background="@drawable/textnomal" />
        <View
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:id="@+id/view1"
            android:background="@color/clGray" />
    </LinearLayout>

</LinearLayout>
