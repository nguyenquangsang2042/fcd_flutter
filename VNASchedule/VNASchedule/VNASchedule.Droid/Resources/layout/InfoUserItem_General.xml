<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ln_content_general"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/background_light">

    <TextView
        android:layout_marginBottom="5dp"
        android:text="GENERAL"
        android:fontFamily="sans-serif-light"
        android:paddingBottom="3dp"
        android:paddingTop="3dp"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="#295989"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <!--MOBILE-->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">
            <TextView
                android:text="MOBILE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView4"
                android:fontFamily="sans-serif-light"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/headerBlue"/>
            <TextView
                android:text="*"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_InfoUser_Mobile"
                android:fontFamily="sans-serif-light"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"
                android:paddingLeft="5dp"
                android:textSize="14sp"
                android:visibility="gone"
                android:textColor="@color/red"/>
            <ImageView
                android:src="@drawable/icon_editpencil"
                android:visibility="gone"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:id="@+id/img_InfoUser_Mobile"
                android:layout_marginLeft="5dp" />
        </LinearLayout>
        <EditText
            android:inputType="number"
            android:fontFamily="sans-serif-light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edt_InfoUser_Mobile"
            android:textColor="@android:color/background_dark"
            android:textSize="14sp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:background="@drawable/textnomal" />
        <View
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:id="@+id/view1"
            android:background="@color/clGray" />
    </LinearLayout>

    <!--EMAIL VNA-->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">
        <TextView
            android:text="EMAIL VNA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:textStyle="bold"
            android:textColor="@color/headerBlue"
            android:fontFamily="sans-serif-light"
            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            android:textSize="14sp" />
        <EditText
            android:fontFamily="sans-serif-light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edt_InfoUser_Email1"
            android:textColor="@android:color/background_dark"
            android:textSize="14sp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:background="@drawable/textnomal" />
        <View
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:id="@+id/view1"
            android:background="@color/clGray" />
    </LinearLayout>

    <!--EMAIL USER-->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
