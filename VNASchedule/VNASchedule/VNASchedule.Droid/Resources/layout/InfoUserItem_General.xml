            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp" />
    </LinearLayout>

    <!--CREW CODE-->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout63231"
        android:gravity="center_vertical">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">
            <TextView
                android:text="CREW CODE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView4"
                android:textStyle="bold"
                android:textColor="@color/headerBlue"
                android:fontFamily="sans-serif-light"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"
                android:textSize="14sp" />
            <ImageView
                android:visibility="gone"
                android:src="@drawable/icon_editpencil"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:id="@+id/img_InfoUser_Working"
                android:layout_marginLeft="10dp" />
        </LinearLayout>
        <EditText
            android:fontFamily="sans-serif-light"
            android:text=""
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edt_InfoUser_Working"
            android:textColor="@android:color/background_dark"
            android:textSize="14sp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:background="@drawable/textnomal" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:id="@+id/view1"
            android:background="@color/clGray"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp" />
    </LinearLayout>

    <!--MY ID TRAVEL-->
    <LinearLayout
        android:visibility="visible"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout10"
        android:gravity="center_vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textAllCaps="true"
                android:text="my id travel Account"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView4"
                android:textStyle="bold"
                android:textColor="@color/headerBlue"
                android:fontFamily="sans-serif-light"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"
                android:textSize="14sp" />
            <ImageView
                android:visibility="invisible"
                android:src="@drawable/icon_editpencil"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:id="@+id/img_InfoUser_Travel"
                android:layout_marginLeft="10dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center_vertical"
                android:layout_toRightOf="@+id/textView4"/>

            <ImageView
                android:src="@drawable/icon_forward"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:padding="3dp"
                android:layout_centerInParent="true"
                android:layout_alignParentEnd="true"
                android:id="@+id/img_InfoUser_MyIDTravel"/>
        </RelativeLayout>

        <EditText
            android:fontFamily="sans-serif-light"
            android:text=""
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edt_InfoUser_Travel"
            android:textColor="@android:color/background_dark"
            android:textSize="14sp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:background="@drawable/textnomal" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:id="@+id/view1"
            android:background="@color/clGray"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp" />
    </LinearLayout>

