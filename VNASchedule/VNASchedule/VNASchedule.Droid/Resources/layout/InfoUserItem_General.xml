                android:layout_height="match_parent"
                android:id="@+id/img_InfoUser_Email2"
                android:layout_marginLeft="5dp" />
        </LinearLayout>
        <EditText
            android:fontFamily="sans-serif-light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/edt_InfoUser_Email2"
            android:textColor="@android:color/background_dark"
            android:textSize="14sp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:background="@drawable/textnomal" />
        <View
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:id="@+id/view132"
            android:background="@color/clGray" />
    </LinearLayout>

    <!--BIRTHDAY-->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout3216"
        android:gravity="center_vertical">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">
            <TextView
                android:text="BIRTHDAY"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView4"
                android:textStyle="bold"
                android:textColor="@color/headerBlue"
                android:fontFamily="sans-serif-light"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"
                android:textSize="14sp" />
            <ImageView
                android:visibility="gone"
                android:src="@drawable/icon_editpencil"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:id="@+id/img_InfoUser_Brithday"
