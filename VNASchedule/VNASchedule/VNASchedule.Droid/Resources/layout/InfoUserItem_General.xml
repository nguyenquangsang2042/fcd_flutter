            android:fontFamily="sans-serif-light"
            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            android:textSize="14sp" />

        <TextView
            android:fontFamily="sans-serif-light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_nationality"
